{
    "family": "api-gateway",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::634733903398:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::634733903398:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "api-gateway",
            "image": "634733903398.dkr.ecr.eu-west-1.amazonaws.com/cinema-api-gateway:latest",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "PORT",
                    "value": "8080"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "MOVIES_SERVICE_URL",
                    "value": "http://movies-service.cinema-cluster.local:3000"
                },
                {
                    "name": "CINEMA_CATALOG_SERVICE_URL", 
                    "value": "http://cinema-catalog-service.cinema-cluster.local:3001"
                },
                {
                    "name": "BOOKING_SERVICE_URL",
                    "value": "http://booking-service.cinema-cluster.local:3003"
                },
                {
                    "name": "PAYMENT_SERVICE_URL",
                    "value": "http://payment-service.cinema-cluster.local:3002"
                },
                {
                    "name": "NOTIFICATION_SERVICE_URL",
                    "value": "http://notification-service.cinema-cluster.local:3004"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                "wget --no-verbose --tries=1 --spider http://localhost:8080/ || exit 1"
                ],
                "interval": 30,
                "timeout": 10,
                "retries": 3,
                "startPeriod": 120
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/api-gateway",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
